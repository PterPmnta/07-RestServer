{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2016",
        "strict": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "exclude": ["node_modules"],
    "include": ["src/"]
}
